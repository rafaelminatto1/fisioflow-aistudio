# MCP Infrastructure Configuration
# Copy this file to .env.local and fill in your actual values

# ==============================================
# RAILWAY CONFIGURATION
# ==============================================

# Railway API Key (get from Railway dashboard)
RAILWAY_API_KEY=your_railway_api_key_here

# Railway Project ID (found in project settings)
RAILWAY_PROJECT_ID=your_railway_project_id_here

# Railway Refresh Token (for token renewal)
RAILWAY_REFRESH_TOKEN=your_railway_refresh_token_here

# Railway Domains
RAILWAY_PRODUCTION_DOMAIN=your_app_name.railway.app
RAILWAY_STAGING_DOMAIN=your_app_name-staging.railway.app

# ==============================================
# NEON DB CONFIGURATION
# ==============================================

# Neon API Key (get from Neon console)
NEON_API_KEY=your_neon_api_key_here

# Neon Project ID (found in project settings)
NEON_PROJECT_ID=your_neon_project_id_here

# Neon Database Connection Details
NEON_DB_HOST=your_db_host.neon.tech
NEON_DB_NAME=fisioflow
NEON_DB_USER=your_db_user
NEON_DB_PASSWORD=your_db_password

# ==============================================
# DATABASE URLS
# ==============================================

# Production Database URL
DATABASE_URL=postgresql://user:password@host.neon.tech:5432/fisioflow?sslmode=require

# Staging Database URL (optional)
STAGING_DATABASE_URL=postgresql://user:password@staging_host.neon.tech:5432/fisioflow_staging?sslmode=require

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth URL (your app URL)
NEXTAUTH_URL=https://your_app_name.railway.app

# ==============================================
# AI PROVIDERS (if using AI features)
# ==============================================

# OpenAI API Key
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Upload/Storage Configuration
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Node Environment
NODE_ENV=production

# Debug Mode
DEBUG=false

# Log Level
LOG_LEVEL=info