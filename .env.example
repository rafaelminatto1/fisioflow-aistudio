# ========================================
# FISIOFLOW - CONFIGURAÇÃO DE AMBIENTE
# ========================================

# ========================================
# AMBIENTE E APLICAÇÃO
# ========================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# ========================================
# BANCO DE DADOS
# ========================================
# URL principal do banco
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# URL direta para migrações
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"



# ========================================
# AUTENTICAÇÃO - NEXTAUTH
# ========================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ========================================
# PROVEDORES DE IA
# ========================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# REDIS (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ========================================
# EMAIL (OPCIONAL)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ========================================
# AWS (OPCIONAL)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ========================================
# MONITORAMENTO E LOGS
# ========================================
LOG_LEVEL=info
HEALTH_CHECK_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true

# ========================================
# CACHE E PERFORMANCE
# ========================================
ROUTE_CACHE_ENABLED=true
ROUTE_CACHE_TTL=300
IMAGE_CACHE_TTL=31536000

# ========================================
# SEGURANÇA
# ========================================
STATUS_CHECK_TOKEN=your_status_check_token_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ========================================
# DESENVOLVIMENTO
# ========================================
# Descomente para análise de bundle
# ANALYZE=true

# Descomente para debug detalhado
# DEBUG=true

# ========================================
# DESENVOLVIMENTO
# ========================================
# Descomente para análise de bundle
# ANALYZE=true

# Descomente para debug detalhado
# DEBUG=true

# Development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# ========================================
# TESTES
# ========================================
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/fisioflow_test"
TEST_BASE_URL=http://localhost:3000

# ========================================
# NOTAS IMPORTANTES
# ========================================
# 1. NUNCA commite este arquivo no repositório
# 2. Copie para .env.local e configure as variáveis reais
# 3. Para produção, configure as variáveis no ambiente de deploy
# 4. Use sempre SSL para conexões de banco em produção
