# ========================================
# FISIOFLOW - CONFIGURAÇÃO DE AMBIENTE
# ========================================

# ========================================
# AMBIENTE E APLICAÇÃO
# ========================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# ========================================
# BANCO DE DADOS - NEON DB
# ========================================
# URL principal do banco (com pooling)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connect_timeout=30&pool_timeout=30&idle_timeout=600&max=20"

# URL direta para migrações e Prisma Studio
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require&connect_timeout=30"

# Configurações específicas do Neon
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here
NEON_DB_HOST=your_neon_host_here
NEON_DB_NAME=your_neon_database_name
NEON_DB_USER=your_neon_username
NEON_DB_PASSWORD=your_neon_password

# Configurações de pool para Neon
NEON_POOLED_CONNECTION=true
NEON_CONNECTION_TIMEOUT=30000
NEON_IDLE_TIMEOUT=600000
NEON_MAX_CONNECTIONS=20
NEON_MIN_CONNECTIONS=2

# ========================================
# RAILWAY PLATFORM
# ========================================
RAILWAY_API_KEY=your_railway_api_key_here
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_REFRESH_TOKEN=your_railway_refresh_token_here
RAILWAY_ENVIRONMENT=development
RAILWAY_SERVICE_NAME=fisioflow
RAILWAY_STRUCTURED_LOGGING=true
RAILWAY_METRICS_ENABLED=true

# Domínios Railway
RAILWAY_PRODUCTION_DOMAIN=your-app.railway.app
RAILWAY_STAGING_DOMAIN=your-app-staging.railway.app

# ========================================
# AUTENTICAÇÃO - NEXTAUTH
# ========================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ========================================
# PROVEDORES DE IA
# ========================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# REDIS (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ========================================
# EMAIL (OPCIONAL)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ========================================
# AWS (OPCIONAL)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# ========================================
# MONITORAMENTO E LOGS
# ========================================
LOG_LEVEL=info
HEALTH_CHECK_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true

# ========================================
# CACHE E PERFORMANCE
# ========================================
ROUTE_CACHE_ENABLED=true
ROUTE_CACHE_TTL=300
IMAGE_CACHE_TTL=31536000

# ========================================
# SEGURANÇA
# ========================================
STATUS_CHECK_TOKEN=your_status_check_token_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ========================================
# DESENVOLVIMENTO
# ========================================
# Descomente para análise de bundle
# ANALYZE=true

# Descomente para debug detalhado
# DEBUG=true

# ========================================
# TESTES
# ========================================
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/fisioflow_test"
TEST_BASE_URL=http://localhost:3000

# ========================================
# NOTAS IMPORTANTES
# ========================================
# 1. NUNCA commite este arquivo no repositório
# 2. Copie para .env.local e configure as variáveis reais
# 3. Para produção, use Railway Variables ou .env.production
# 4. Para Neon DB, use sempre SSL (sslmode=require)
# 5. Configure pooling para melhor performance em produção
