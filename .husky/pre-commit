#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Executar lint-staged para verificar arquivos staged
npx lint-staged

# Verificar tipos TypeScript
npm run type-check

# Executar testes unit√°rios se existirem
if [ -d "__tests__" ] || [ -d "tests" ] || [ -d "test" ]; then
  npm run test:unit
fi